{
  "name": "apm-vite-desk",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.4.0",
    "@bugsnag/js": "^8.4.0",
    "@bugsnag/plugin-react": "^8.4.0",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/roboto": "^5.2.6",
    "@fortawesome/fontawesome-svg-core": "^7.0.1",
    "@fortawesome/free-regular-svg-icons": "^7.0.1",
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "@fortawesome/react-fontawesome": "^3.0.2",
    "@hello-pangea/dnd": "^18.0.1",
    "@mui/icons-material": "^6.5.0",
    "@mui/material": "^7.3.2",
    "@mui/x-data-grid": "^8.11.0",
    "@mui/x-tree-view": "^8.11.0",
    "@orbit/coordinator": "^0.17.0",
    "@orbit/core": "^0.17.0",
    "@orbit/indexeddb": "^0.17.2",
    "@orbit/indexeddb-bucket": "^0.17.0",
    "@orbit/jsonapi": "^0.17.1",
    "@orbit/memory": "^0.17.2",
    "@orbit/records": "^0.17.0",
    "@orbit/serializers": "^0.17.0",
    "@uiw/react-color-colorful": "^2.8.0",
    "@xmldom/xmldom": "^0.8.11",
    "array-move": "^4.0.0",
    "audio-recorder-polyfill": "^0.4.1",
    "axios": "^1.11.0",
    "browser-image-compression": "^2.0.2",
    "electron-updater": "^6.3.9",
    "fingerprintjs2": "^2.1.4",
    "lodash": "^4.17.21",
    "luxon": "^3.7.1",
    "mui-language-picker": "^2.5.2",
    "react-datasheet": "^1.4.12",
    "react-draggable": "^4.5.0",
    "react-file-drop": "^3.1.6",
    "react-icons": "^5.5.0",
    "react-localization": "^2.0.6",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.8.2",
    "react-select": "^5.10.2",
    "react-string-replace": "^1.1.1",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0",
    "remark-gfm": "^4.0.1",
    "styled-components": "^6.1.19",
    "url-parse": "^1.5.10",
    "wavesurfer.js": "^5.2.0",
    "xpath": "^0.0.34"
  },
    "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "build",
      "out"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/fingerprintjs2": "^2.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@types/react-redux": "^7.1.34",
    "@types/react-router-dom": "^5.3.3",
    "@types/wavesurfer.js": "^3.3.2",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  },
  "author": {
    "name": "SIL Global",
    "email": "info@sil.org",
    "url": "http://sil.org"
  },
  "build": {
    "appId": "sil.lsdev.audio-project-manager",
    "productName": "Audio Project Manager",
    "copyright": "Copyright Â© 2020-2025 ${author}",
    "win": {
      "icon": "public/icon.png"
    },
    "linux": {
      "icon": "debian/audio-project-manager.png",
      "desktop": "debian/audio-project-manager.desktop",
      "target": [
        "deb"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "public/icon.png",
      "hardenedRuntime": true,
      "entitlements": "env-config/entitlements.mac.plist",
      "entitlementsInherit": "env-config/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Please give us access to your microphone"
      }
    },
    "dmg": {
      "sign": false
    },
    "afterSign": "env-config/notarize.js",
    "directories": {
      "buildResources": "assets"
    },
    "extraFiles": [
      {
        "from": "public",
        "to": ".",
        "filter": "normalizer.js"
      },
      {
        "from": "public/localization",
        "to": "localization",
        "filter": "*.json"
      },
      {
        "from": "help",
        "to": "help",
        "filter": "*.chm"
      },
      {
        "from": "help",
        "to": "help",
        "filter": "*.xlsx"
      },
      {
        "from": "src/script",
        "to": "resources",
        "filter": [
          "resetData.*",
          "*.py",
          "*.aup3"
        ]
      }
    ]
  },
  "volta": {
    "node": "22.19.0"
  }
}
